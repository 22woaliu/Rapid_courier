<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rapid_courier.ClientConfirmOrderController">

    <center>
        <ScrollPane fitToWidth="true" BorderPane.alignment="CENTER">
         <content>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-padding: 80;">
               <children>
                      <VBox alignment="TOP_CENTER" maxWidth="700.0" prefWidth="700.0" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10;">
                          <padding>
                              <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
                          </padding>
            
                          <!-- Header Section -->
                          <HBox alignment="CENTER_LEFT" spacing="10.0">
                              <children>
                                  <Label style="-fx-font-size: 22;" text="Confirm Your Order" />
                              </children>
                          </HBox>
            
                          <!-- First VBox: Addresses Section -->
                          <VBox spacing="15.0" style="-fx-background-color: bbdefa82; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-border-width: 1;">
                              <padding>
                                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                              </padding>
            
                              <Label style="-fx-font-size: 16;" text="Route Information" />
            
                              <!-- Pickup Address -->
                              <VBox spacing="5.0">
                                  <Label style="-fx-font-size: 14; -fx-text-fill: gray;" text="Pickup Address" />
                                  <Label fx:id="pickupAddressLabel" style="-fx-font-size: 16;" text="123 Main Street, City, State, 12345" wrapText="true" />
                              </VBox>
            
                              <!-- Delivery Address -->
                              <VBox spacing="5.0">
                                  <Label style="-fx-font-size: 14; -fx-text-fill: gray;" text="Delivery Address" />
                                  <Label fx:id="deliveryAddressLabel" style="-fx-font-size: 16;" text="456 Oak Avenue, Town, State, 67890" wrapText="true" />
                              </VBox>
                          </VBox>
            
                          <!-- Second VBox: Contact Information Section -->
                          <VBox spacing="15.0" style="-fx-background-color: #00800017; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-border-width: 1;">
                              <padding>
                                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                              </padding>
            
                              <Label style="-fx-font-size: 16;" text="Contact Information" />
            
                              <!-- Sender Phone -->
                              <VBox spacing="5.0">
                                  <Label style="-fx-font-size: 14; -fx-text-fill: gray;" text="Sender Phone Number" />
                                  <Label fx:id="senderPhoneLabel" style="-fx-font-size: 16;" text="+1234567890" />
                              </VBox>
            
                              <!-- Receiver Phone -->
                              <VBox spacing="5.0">
                                  <Label style="-fx-font-size: 14; -fx-text-fill: gray;" text="Receiver Phone Number" />
                                  <Label fx:id="receiverPhoneLabel" style="-fx-font-size: 16;" text="+0987654321" />
                              </VBox>
                          </VBox>
            
                          <!-- Third VBox: Package Details Section -->
                          <VBox spacing="15.0" style="-fx-background-color: #80008017; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-border-width: 1;">
                              <padding>
                                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                              </padding>
            
                              <Label style="-fx-font-size: 16;" text="Package Details" />
            
                              <!-- Package Weight -->
                              <VBox spacing="5.0">
                                  <Label style="-fx-font-size: 14; -fx-text-fill: gray;" text="Package Weight" />
                                  <Label fx:id="packageWeightLabel" style="-fx-font-size: 16;" text="2.5kg" />
                              </VBox>
            
                              <!-- Package Description -->
                              <VBox spacing="5.0">
                                  <Label style="-fx-font-size: 14; -fx-text-fill: gray;" text="Package Description" />
                                  <Label fx:id="packageDescriptionLabel" style="-fx-font-size: 16;" text="Documents, Electronics" wrapText="true" />
                              </VBox>
                          </VBox>
            
                          <!-- Fourth VBox:  Delivery Cost Section -->
                          <VBox spacing="15.0" style="-fx-background-color: #ffff0017; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-border-width: 1;">
                              <padding>
                                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                              </padding>
            
                              <Label style="-fx-font-size: 16;" text="Payment Method" />
                              <Label style="-fx-font-size: 16;" text="Cash On Delivery (COD)" />
                          </VBox>
            
                          <!-- Action Buttons -->
                          <HBox alignment="CENTER" spacing="20.0">
                              <VBox.margin>
                                  <Insets bottom="10.0" top="10.0" />
                              </VBox.margin>
            
                              <Button mnemonicParsing="false" onAction="#onBackClick" prefHeight="40.0" prefWidth="240.0" style="-fx-background-color: #f5f5f5; -fx-text-fill: #333; -fx-font-size: 18; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" text="Back" />
            
                              <Button mnemonicParsing="false" onAction="#onConfirmOrder" prefHeight="40.0" prefWidth="240.0" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-size: 18; -fx-background-radius: 5;" text="Confirm Order" />
                          </HBox>
            
                      </VBox>
               </children>
            </VBox>
         </content>
        </ScrollPane>
    </center>
   <top>
      <HBox prefHeight="60.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;" BorderPane.alignment="CENTER">
       <Button mnemonicParsing="false" onAction="#onBackClick" style="-fx-background-color: transparent;">
           <graphic>
               <Label style="-fx-font-size: 15; -fx-text-fill: gray; -fx-background-color: transparent;" text=" ❮❮ Back " />
           </graphic>
       </Button>
         <padding>
             <Insets top="15.0" />
            </padding>
        </HBox>
   </top>

</BorderPane>
