<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #E8F0F5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rapid_courier.ClientPageController">
    
    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets left="30.0" right="30.0" />
            </padding>
            
            <!-- Logo and Title -->
            <HBox alignment="CENTER_LEFT" spacing="12.0" HBox.hgrow="ALWAYS">
                <Label text="Courier System" textFill="#2C3E50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
            </HBox>
            
            <!-- User Info and Logout -->
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
                <Label textFill="#546E7A">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                
                <Button onAction="#onLogoutClick" onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited" style="-fx-background-color: transparent;" text="Logout">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </HBox>
        </HBox>
    </top>
    
    <!-- Center Content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="40.0">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="80.0" />
            </padding>
            
            <!-- Welcome Section -->
            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Welcome, " textFill="#2C3E50">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>
                <Label text="What would you like to do today?" textFill="#546E7A">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </VBox>
            
            <!-- Action Cards -->
            <HBox alignment="CENTER" spacing="40.0">
                <!-- Request Courier Button -->
                <Button onAction="#onRequestCourierClick" onMouseEntered="#onCardMouseEntered" onMouseExited="#onCardMouseExited" prefHeight="220.0" prefWidth="350.0" style="-fx-background-color: #FFFFFF;">
                    <graphic>
                        <VBox alignment="CENTER" spacing="20.0">
                            <padding>
                                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                            </padding>
                            
                            <StackPane>
                                <Circle fill="#D6E4FF" radius="40.0" />
                            </StackPane>
                            
                            <Label text="Request Courier" textFill="#2C3E50">
                                <font>
                                    <Font name="System Bold" size="20.0" />
                                </font>
                            </Label>
                            
                            <Label text="Create a new delivery request" textAlignment="CENTER" textFill="#546E7A">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </Label>
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                        </VBox>
                    </graphic>
                </Button>
                
                <!-- View Courier Status Button -->
                <Button onAction="#onViewCourierClick" onMouseEntered="#onCardMouseEntered" onMouseExited="#onCardMouseExited" prefHeight="220.0" prefWidth="350.0" style="-fx-background-color: #FFFFFF;">
                    <graphic>
                        <VBox alignment="CENTER" spacing="20.0">
                            <padding>
                                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                            </padding>
                            
                            <StackPane>
                                <Circle fill="#C8E6C9" radius="40.0" />
                            </StackPane>
                            
                            <Label text="View Courier Status" textFill="#2C3E50">
                                <font>
                                    <Font name="System Bold" size="20.0" />
                                </font>
                            </Label>
                            
                            <Label text="Track your deliveries" textAlignment="CENTER" textFill="#546E7A">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </Label>
                        </VBox>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>
