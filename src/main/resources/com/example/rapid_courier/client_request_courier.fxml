<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rapid_courier.RequestCourierController">
   <top>
      <HBox prefHeight="60.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;" BorderPane.alignment="CENTER">
         <children>
              <Button mnemonicParsing="false" onAction="#onBackandCancelClick" style="-fx-background-color: transparent;">
                  <graphic>
                      <Label style="-fx-font-size: 15; -fx-text-fill: gray; -fx-background-color: transparent;" text=" ❮❮ Back to Dashboard" />
                  </graphic>
              </Button>
         </children>
         <padding>
            <Insets top="15.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
                <VBox alignment="TOP_CENTER" maxHeight="600.0" maxWidth="700.0" prefHeight="600.0" prefWidth="700.0" spacing="30.0" style="-fx-border-width: 1; -fx-background-color: #FFFFFF; -fx-background-radius: 10;">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>

                          <!-- Header Section -->
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Circle fill="#bbdefb" radius="25.0" stroke="#bbdefb" strokeType="INSIDE" />
                        <Label style="-fx-font-size: 20;" text="Create a Courier Request" />
                    </HBox>

                          <!-- Form Fields Section -->
                    <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="40.0">

                              <!-- Pickup Address -->
                        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
                            <Label style="-fx-font-size: 16;" text="Pickup Address" />
                            <TextField fx:id="pickupAddressField" prefWidth="500.0" promptText="Enter pickup location" style="-fx-font-size: 18; -fx-border-radius: 10; -fx-border-color: lightgray; -fx-background-color: white; -fx-background-radius: 10;" />
                        </VBox>

                              <!-- Delivery Address -->
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 16;" text="Delivery Address" />
                            <TextField fx:id="deliveryAddressField" prefWidth="500.0" promptText="Enter delivery location" style="-fx-font-size: 18; -fx-background-color: white; -fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-radius: 10;" />
                        </VBox>

                              <!-- Phone Numbers Row -->
                        <HBox alignment="CENTER" spacing="20.0">
                            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                <Label style="-fx-font-size: 16;" text="Sender Phone Number" />
                                <TextField fx:id="senderPhoneField" prefWidth="240.0" promptText="+1234567890" style="-fx-font-size: 18; -fx-background-color: white; -fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-radius: 10;" />
                            </VBox>
                            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                <Label style="-fx-font-size: 16;" text="Receiver Phone Number" />
                                <TextField fx:id="receiverPhoneField" prefWidth="240.0" promptText="+0987654321" style="-fx-font-size: 18; -fx-background-color: white; -fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-radius: 10;" />
                            </VBox>
                        </HBox>

                              <!-- Package Details Row -->
                        <HBox alignment="CENTER" spacing="20.0">
                            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                <Label style="-fx-font-size: 16;" text="Package Weight" />
                                <TextField fx:id="packageWeightField" prefWidth="240.0" promptText="e.g. 2.5kg" style="-fx-font-size: 18; -fx-background-color: white; -fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-radius: 10;" />
                            </VBox>
                            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                <Label style="-fx-font-size: 16;" text="Package Description" />
                                <TextField fx:id="packageDescriptionField" prefWidth="240.0" promptText="e.g. Documents, Electronics etc." style="-fx-font-size: 18; -fx-background-color: white; -fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-radius: 10;" />
                            </VBox>
                        </HBox>

                              <!-- Action Buttons -->
                        <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" spacing="20.0">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                            <Button mnemonicParsing="false" onAction="#onBackandCancelClick" prefWidth="280.0" style="-fx-font-size: 18; -fx-background-color: lightgray; -fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-radius: 10;" text="Cancel" />
                            <Button mnemonicParsing="false" onAction="#onConfirmRequest" prefWidth="280.0" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 18;" text="Confirm Request" />
                        </HBox>

                          </VBox>
                </VBox>
         </children>
      </VBox>
   </center>

</BorderPane>
